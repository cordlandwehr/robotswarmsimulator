# project file for pull & spin algorithms in 3d for building compact spheres.

PROJECT_NAME="pull3d"
ROBOT_FILENAME="pull3dtwist"
OBSTACLE_FILENAME="pullspin3d"

#Switch between ASGs here
ASG="SYNCHRONOUS"
#ASG="ASYNCHRONOUS"
#ASYNC_ASG_SEED="52"
#ASYNC_ASG_PART_P="0.1"
#ASYNC_ASG_TIME_P="0.02"

CAMERA_DIRECTION="1,0,0"
CAMERA_POSITION="0,0,0"
COMPASS_MODEL="NO_COMPASS"

ROBOT_CONTROL="UNIFORM_ROBOT_CONTROL"

VIEW="GLOBAL_VIEW"

STATISTICS_DATADUMP="NONE"
STATISTICS_SUBSETS="{ALL}"
STATISTICS_TEMPLATE="ALL"

#Toggle Position Request Handler on, if you want to
#POSITION_REQUEST_HANDLER_TYPE="VECTOR"
#VECTOR_POSITION_REQUEST_HANDLER_DISCARD_PROB="0.0"
#VECTOR_POSITION_REQUEST_HANDLER_MODIFIER="(VECTOR_DIFFERENCE_TRIMMER,1000.0)"
#VECTOR_POSITION_REQUEST_HANDLER_SEED="1"

POSITION_REQUEST_HANDLER_TYPE="COLLISION"
COLLISION_POSITION_REQUEST_HANDLER_STRATEGY="TOUCH"
COLLISION_POSITION_REQUEST_HANDLER_CLEARANCE="0.50"
COLLISION_POSITION_REQUEST_HANDLER_DISCARD_PROB="0.0"
COLLISION_POSITION_REQUEST_HANDLER_SEED="879"
#COLLISION_POSITION_REQUEST_HANDLER_MODIFIER="(VECTOR_DIFFERENCE_TRIMMER,1000.0)"

TYPE_CHANGE_REQUEST_HANDLER_TYPE="STANDARD"
STANDARD_TYPE_CHANGE_REQUEST_HANDLER_DISCARD_PROB="0.0"
STANDARD_TYPE_CHANGE_REQUEST_HANDLER_SEED="42"